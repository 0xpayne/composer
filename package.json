{
  "name": "@ibm/ibm-concerto-cli",
  "version": "0.2.0",
  "description": "IBM Concerto command line interfaces (CLIs)",
  "bin": {
    "concerto": "cli.js"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "mocha --recursive && istanbul cover --include-all-sources --report cobertura --report html ./node_modules/mocha/bin/_mocha -- --recursive",
    "posttest": "istanbul check-coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/Blockchain-WW-Labs/Concerto-CLI.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "IBM",
  "license": "ISC",
  "devDependencies" : {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-things": "^0.2.0",
    "eslint": "^3.5.0",
    "istanbul": "^0.4.5",
    "license-check": "^1.1.5",
    "mocha": "^3.0.2",
    "moment": "^2.15.1",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2"
  },
  "dependencies": {
    "@ibm/ibm-concerto-admin": "unstable",
    "@ibm/ibm-concerto-client": "unstable",
    "@ibm/ibm-concerto-common": "unstable",
    "homedir": "^0.6.0",
    "prettyjson": "^1.2.1",
    "prompt": "^1.0.0",
    "yargs": "^6.2.0"
  },
  "publishConfig": {
    "registry": "https://npm-registry.whitewater.ibm.com"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./cli.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
