{
  "name": "@ibm/ibm-concerto-systests",
  "version": "0.1.0",
  "description": "System tests and automation for IBM Concerto, the Blockchain Solution Framework",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run lint",
    "lint": "eslint .",
    "test": "exit 0",
    "systesthlf": "mocha -t 0 systest",
    "systestweb": "karma start --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:Blockchain-WW-Labs/Concerto-System-Tests.git"
  },
  "author": "IBM",
  "license": "ISC",
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "devDependencies": {
    "@ibm/ibm-concerto-admin": "latest",
    "@ibm/ibm-concerto-client": "latest",
    "@ibm/ibm-concerto-common": "latest",
    "@ibm/ibm-concerto-connector-web": "latest",
    "brfs": "^1.4.3",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "eslint": "^3.10.2",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "0.0.26",
    "license-check": "^1.1.5",
    "mocha": "^3.1.2",
    "watchify": "^3.7.0"
  },
  "publishConfig": {
    "registry": "https://npm-registry.whitewater.ibm.com"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
