{
  "name": "@ibm/loopback-connector-concerto",
  "version": "0.3.9",
  "description": "A Loopback connector for IBM Concerto, the Blockchain Solution Framework.",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "mocha --recursive && istanbul cover --include-all-sources --report cobertura --report html ./node_modules/mocha/bin/_mocha -- --recursive",
    "posttest": "istanbul check-coverage",
    "integration-test": "mocha -t 0 integration-test",
    "integration-test-debug": "mocha $NODE_DEBUG_OPTION -t 0 integration-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/Blockchain-WW-Labs/Concerto-Loopback-Connector.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "IBM",
  "license": "ISC",
  "dependencies": {
    "@ibm/concerto-admin": "^0.3.9",
    "@ibm/concerto-client": "^0.3.9",
    "@ibm/concerto-common": "^0.3.9",
    "@ibm/concerto-connector-embedded": "^0.3.9",
    "@ibm/concerto-connector-web": "^0.3.9",
    "loopback-connector": "^2.5.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.8.1",
    "ink-docstrap": "^1.3.0",
    "jsdoc": "^3.4.2",
    "license-check": "^1.1.5",
    "loopback": "^2.35.0",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "sleep-promise": "^2.0.0"
  },
  "publishConfig": {
    "registry": "https://npm-registry.whitewater.ibm.com"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
